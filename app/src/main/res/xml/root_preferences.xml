<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="API">
        <EditTextPreference
            app:defaultValue=""
            app:key="api_token"
            app:title="API Token"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="EMAIL">

        <EditTextPreference
            app:defaultValue=""
            app:key="emailTo"
            app:title="EMAIL-TO"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue=""
            app:key="emailAuthor"
            app:title="Name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>